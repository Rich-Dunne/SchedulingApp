<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="CalendarListView">
        <Border>
            <WrapPanel>
                <StackPanel Orientation="Horizontal" Width="504" Margin="0,5,0,0">
                    <TextBlock Text="{Binding FullDate, Mode=OneWay}"
                               Width="100"/>
                    <TextBlock Text="{Binding FormattedTime, Mode=OneWay}"
                               Width="95"/>
                    <TextBlock Text="{Binding Type, Mode=OneWay}"
                               Width="170"/>
                    <TextBlock Text="{Binding CustomerName, Mode=OneWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource EditButtonTheme}"
                            Command="{Binding EditCommand}">
                        <Image Source="/Images/edit.png" Width="15"/>
                    </Button>
                    <Button Margin="10,0,0,0"
                            Style="{StaticResource CancelButtonTheme}"
                            Command="{Binding CancelCommand}">
                        <Image Source="/Images/exit.png" Width="15"/>
                    </Button>
                </StackPanel>
            </WrapPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>